# ============================================================================
# ASTER DEX API CREDENTIALS
# ============================================================================
# Get these from: Aster DEX Settings > API Management > Create New Key
# IMPORTANT: Never commit your actual .env file to git!

ASTER_API_KEY=your_api_key_here
ASTER_API_SECRET=your_api_secret_here

# Aster API endpoints (usually don't need to change these)
ASTER_BASE_URL=https://fapi.asterdex.com
ASTER_WS_URL=wss://fstream.asterdex.com

# ============================================================================
# WALLET CONFIGURATION
# ============================================================================
# Your wallet address (format: 0x...)
WALLET_ADDRESS=0x742d35Cc6634C0532925a3b8...

# ============================================================================
# TRADING PARAMETERS
# ============================================================================

# Referral code for Aster Genesis Stage 3
REFERRAL_CODE=KoPPFo

# How much USDT to trade with (start small!)
# Recommendation: $100-500 for testing, then scale up
CAPITAL_USDT=100.0

# Leverage multiplier (higher = more volume but more risk)
# Recommendations:
# - Beginners: 5-10x
# - Intermediate: 10-15x
# - Advanced: 15-20x
# - Never exceed 25x
LEVERAGE=15

# Minimum hold time in minutes (90 min = 10x multiplier on Aster)
# Don't go below 90 unless Aster changes their reward structure
POSITION_HOLD_TIME_MIN=90

# Daily volume target in USD
# Scale this with your capital:
# - $100 capital → $15K target
# - $1000 capital → $150K target
DAILY_VOLUME_TARGET=15000.0

# Maximum position size as % of capital
# 1.5% means each position uses 1.5% of your capital
# Lower = more conservative, Higher = more aggressive
MAX_POSITION_SIZE_PCT=1.5

# Which trading pairs to use (currently only first pair is used)
# Must be supported on Aster DEX
TRADING_PAIRS=["BTCUSDT"]

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

# Maximum total drawdown before stopping (%)
# If you lose this much, bot should stop (not implemented yet)
MAX_DRAWDOWN_PCT=5.0

# Maximum PnL drift for delta-neutral positions (%)
# If drift exceeds this, positions will be closed
# Lower = stricter neutrality, Higher = more tolerance
MAX_PNL_DRIFT_PCT=0.8

# Stop-loss per position (%)
# Close position if loss exceeds this threshold
STOP_LOSS_PCT=1.0

# Funding rate threshold (not currently used)
# Future feature: avoid trading when funding rate exceeds this
FUNDING_RATE_THRESHOLD=0.05

# ============================================================================
# DATABASE
# ============================================================================

# SQLite database file path
# Change this to organize data differently (e.g., by month)
DB_PATH=aster-operator.db
